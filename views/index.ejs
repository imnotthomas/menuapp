<!DOCTYPE html>
<html ng-app="app">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/cyborg/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
	<div class="navbar-header">
	  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
	  </button> 
	  <a class="navbar-brand" href="#">MyWebsite</a>
	</div>

	<div class="collapse navbar-collapse" id="myNavbar">
	  <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">Page A</a></li>
            <li><a href="#">Page B</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Page C <b class="caret"></b></a>
              <ul class="dropdown-menu">
		<li><a href="#">Page C - 1</a></li>
		<li><a href="#">Page C - 2</a></li>
		<li><a href="#">Page C - 3</a></li>        
	      </ul>        
            </li>
	  </ul>
	  <ul class="nav navbar-nav navbar-right">
	    <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
	    <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
	  </ul>
	</div>
      </div>
    </nav>

    <ng-view></ng-view>
    <!-- Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-route.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-resource.min.js"></script>

    <!-- Template -->
    <script type="text/ng-template" id="/items.html">
      <div class="container">
	<div class="row">
	  <div class="col-sm-4">
	    <div class="row list-group">
	      <div class="col-xs-12 list-group-item" ng-repeat="item in items">
		<p>Item: <a href="#/{{item._id}}">{{item.name}}</a></p>
		<p>Restaurant: {{item.restaurant}}</p>
		<p>Avg Rating: {{item.rating}}</p>
		<p>Comments: {{item.numComments}}</p>
	      </div>
	    </div>
	  </div>
	</div>
      </div>
    </script>

    <script type="text/ng-template" id="/itemDetail.html">
      <div class="container">
	<div class="row">
	  <div class="col-sm-8">
	    <h3>{{item.name}}</h3>
	    <h4>{{item.restaurant}}</h4>
	    <h4>Avg. Rating: {{item.rating}}</h4>
	  </div>
	</div>
	<div class="row">
	  <div class="col-xs-12">
	    <div class="panel panel-primary">
	      <div class="panel-heading">
		<div class="btn-group pull-right">
		  <a href="#/{{item._id}}/review" class="btn btn-default btn-xs">+ Add Review</a>
		</div>
		<h2 class="panel-title">Customer reviews</h2>
              </div>
	      <div class="panel-body review-container">
		<div class="row">
		  <div class="review" ng-repeat="comment in item.comments">
		    <p><b>Author:</b> {{comment.author}}</p>
		    <p><b>Title:</b> {{comment.title}}</p>
		    <p><b>Rating:</b> {{comment.rating}}</p>
		    <p><b><u>Review</u></b></p>
		    <p>{{comment.commentText}}</p>
		  </div>
		</div>
	      </div>
	    </div>
	  </div>
	</div>
      </div>
    </script>

    <script type="text/ng-template" id="/itemReview.html">
      <div class="container">
	<div class="jumbotron">
	  <h1>Add Review</h1>
	  <div class="row">
	    <div class="col-md-6">
	      <form class="form-horizontal">
		<div class="form-group">
		  <label for="author" class="col-sm-2 control-label">Author</label>
		  <div class="col-sm-10">
		    <input type="text" class="form-control" id="author" placeholder="George Washington" ng-model="comment.author">
		  </div>
		</div>
		<div class="form-group">
		  <label for="title" class="col-sm-2 control-label">Title</label>
		  <div class="col-sm-10">
		    <input type="text" class="form-control" id="title" placeholder="Title" ng-model="comment.title">
		  </div>
		</div>
		<div class="form-group">
		  <label for="rating" class="col-sm-2 control-label">Rating</label>
		  <div class="col-xs-12 col-sm-2">
		    <select id="rating" name="rating" class="form-control input-sm" ng-model="comment.rating">
		      <option>5</option>
		      <option>4</option>
		      <option>3</option>
		      <option>2</option>
		      <option>1</option>
		    </select>
		  </div>
		</div>
		<div class="form-group">
		  <label for="commentText" class="col-sm-2 control-label">Review</label>
		  <div class="col-sm-10">
		    <textarea id="commentText" name="commentText" class="form-control" rows="3" ng-model="comment.commentText"></textarea>
		  </div>
		</div>
		<button type="submit" class="btn btn-default pull-right" ng-click="save()">Submit</button>
	      </form>
	    </div>
	  </div>
	</div>
      </div>
    </script>
    
    <script>
      angular.module('app', ['ngRoute', 'ngResource'])

      //---------------
      // Services
      //---------------

      .factory('Items', ['$resource', function($resource){
      return $resource('/items/:id/');
      }])

      //---------------
      // Controllers
      //---------------

      .controller('ItemController', ['$scope', 'Items', function ($scope, Items) {
        $scope.items = Items.query();
      }])

      .controller('ItemDetailControler', ['$scope', '$routeParams', 'Items', function ($scope, $routeParams, Items) {
        $scope.item = Items.get({id: $routeParams.id });
        $scope.test = "Test";
      }])

      .controller('ItemReviewController', ['$scope','$resource', '$routeParams', 'Items', function ($scope, $resource, $routeParams, Items){
        var Menu = $resource('/items/:id/review', {id: $routeParams.id});

        $scope.Item = Items.get({id: $routeParams.id});
        $scope.save = function(){
          var _author = $scope.comment.author;
          var _title = $scope.comment.title;
          var _rating = $scope.comment.rating;
          var _commentText = $scope.comment.commentText;

          var menu = new Menu();
          menu.author = _author;
          menu.title = _title;
          menu.rating = _rating;
          menu.commentText = _commentText;

          menu.$save();
          console.log(menu);
        };
      }])
      //---------------
      // Routes
      //---------------

      .config(['$routeProvider', function ($routeProvider) {
        $routeProvider
          .when('/', {
            templateUrl: '/items.html',
            controller: 'ItemController'
          })

          .when('/:id', {
            templateUrl: '/itemDetail.html',
            controller: 'ItemDetailControler'
          })

          .when('/:id/review', {
            templateUrl: '/itemReview.html',
            controller: 'ItemReviewController'
          })
      }]);
    </script>
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
